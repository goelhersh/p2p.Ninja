
auto eth0
allow-hotplug eth0
iface eth0 inet static
	address 192.168.1.40
        netmask 255.255.255.0
        gateway 192.168.1.1


auto wlan0
iface wlan0 inet static
	address 192.168.2.40
	netmask 255.255.255.0
	wireless-channel 1
        wireless-essid p2p.Ninja
	wireless-mode ad-hoc